<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav-add-course.ejs") %>

            <div class="courses content">
                <h2>All Courses</h2>

                <% if (courses.length> 0) { %>
                    <% courses.forEach(courses=> { %>
                        <a class="single" href="/courses/<%= courses._id %>">
                            <h3 class="name">
                                <%= courses.name %>
                            </h3>
                        </a>
                        <div>
                            <p class="snippet">
                                <%= courses.snippet %>
                            </p>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p>There are no courses to display.</p>
                                <% } %>
            </div>
            <%- include("./partials/footer.ejs") %>
    </body>

</html>